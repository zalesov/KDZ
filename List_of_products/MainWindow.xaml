<Window x:Class="List_of_products.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Войти:" Height="150" Width="250" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen" >
    <Grid>
        <StackPanel>
            <DockPanel MaxWidth="220" Margin="5" >
                <Label Content="Логин :  "/>
                <TextBox Name="TB_login" TabIndex="1" Text="User"/>
            </DockPanel>
            <DockPanel MaxWidth="220" Margin="5" >
                <Label Content="Пароль :"/>
                <PasswordBox Name="TB_password" TabIndex="2" Password="Password" />
            </DockPanel>
            <Button Name="Avt" Content="Войти" FontSize="14" Margin="10" MaxWidth="200"  TabIndex="3" Click="Avt_Click"  />
        </StackPanel>
    </Grid>
</Window>
