<Window x:Class="List_of_products.DataList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список покупателей" Height="300" Width="500" Closing="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="DG"  SelectionUnit="FullRow"
                  VerticalScrollBarVisibility="Visible" SelectionMode="Single"  IsReadOnly="True" ColumnWidth="*" CanUserReorderColumns="False" HorizontalGridLinesBrush="DarkGray"
    RowBackground="LightGray" AlternatingRowBackground="White" SelectionChanged="DG_SelectionChanged" AutoGeneratedColumns="DG_AutoGeneratedColumns"  >
        </DataGrid>
        <Border BorderThickness="1" CornerRadius="5" BorderBrush="Black" Grid.Row="1">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content=" ПОИСК "/>
                <Label Content=" Покупатель: " Grid.Column="1"/>
                <ComboBox Name="ListUsers" Grid.Column="2" SelectionChanged="ListUsers_SelectionChanged"/>
                <Label Content=" Товар: " Grid.Column="3"/>
                <ComboBox Name="ListProduct" Grid.Column="4" SelectionChanged="ListProduct_SelectionChanged"/>
            </Grid>
        </Border>
        <Border BorderThickness="1" CornerRadius="5" BorderBrush="Black" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Button Name="Add" Content=" Добавить покупателя " Margin="5" IsDefault="True" Click="Add_Click" />
                <Button Name="Delete" Content=" Удалить запись " Margin="5" Visibility="Collapsed" Click="Delete_Click" />
            </StackPanel>

        </Border>
    </Grid>
</Window>
